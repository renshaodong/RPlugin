<idea-plugin>
    <id>com.github.renshaodong.rplugin</id>
    <name>RPlugin</name>
    <vendor>renshaodong</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.renshaodong.rplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.renshaodong.rplugin.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.renshaodong.rplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
    <actions>
        <action id="com.github.renshaodong.rplugin.action.GenerateIcons"
                class="com.github.renshaodong.rplugin.action.GenerateIcons" text="Generate Icons"
                description="Generate IconData from iconfont.json">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <action id="com.github.renshaodong.rplugin.action.GenerateImageAssets"
                class="com.github.renshaodong.rplugin.action.GenerateImageAssets" text="Generate Image Assets">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
